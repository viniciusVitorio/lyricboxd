@model IEnumerable<lyricboxd.Models.ReviewDetailsViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@item.Track.AlbumCoverUrl" class="card-img-top" alt="Album Cover">
                <div class="card-body">
                    <h5 class="card-title">@item.Track.Name</h5>
                    <p class="card-text"><strong>Artist:</strong> @item.Track.Artist</p>
                    <p class="card-text"><strong>Album:</strong> @item.Track.Album</p>
                    <p class="card-text"><strong>User:</strong> @item.Review.User.Username</p>
                    <p class="card-text"><strong>Rating:</strong> @item.Review.Rating</p>
                    <p class="card-text"><strong>Review:</strong> @item.Review.ReviewText</p>
                </div>
            </div>
        </div>
    }
</div>
